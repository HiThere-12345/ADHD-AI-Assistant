{
  "manifest_version": 3,
  "name": "ADHHD_AI_LIFE_LOCK",
  "version": "1.0",
  "description": "A Chrome extension to keep users focused by preventing access to websites until daily tasks are completed.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "pages/options.html"
}